{% extends 'base.html.twig' %}


{#c'est avec Boostrap #}
{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Afficher une Sortie</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Nom de la sortie :</strong> {{ sortie.nom }}
                </div>
                <div class="mb-3">
                    <strong>Date et heure de début :</strong> {{ sortie.dateHeureDebut | date("Y-m-d H:i") }}
                </div>
                <div class="mb-3">
                    <strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription | date("Y-m-d") }}
                </div>
                <div class="mb-3">
                    <strong>Nombre de places :</strong> {{ sortie.nbInscriptionMax }}
                </div>
                <div class="mb-3">
                    <strong>Durée :</strong> {{ sortie.duree }} minutes
                </div>
                <div class="mb-3">
                    <strong>Description et infos :</strong> {{ sortie.infosSortie }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Campus :</strong> {{ sortie.campus.nom }}
                </div>
                <div class="mb-3">
                    <strong>Lieu :</strong> {{ sortie.lieu.nom }}
                </div>
                <div class="mb-3">
                    <strong>Rue :</strong> {{ sortie.lieu.rue }}
                </div>
{#                <div class="mb-3">#}
{#                    <strong>Code postal :</strong> {{ sortie.lieu.ville.codePostal}}#}
{#                </div>#}
                <div class="mb-3">
                    <strong>Latitude :</strong> {{ sortie.lieu.latitude }}
                </div>
                <div class="mb-3">
                    <strong>Longitude :</strong> {{ sortie.lieu.longitude }}
                </div>
            </div>
        </div>

        <h2 class="mt-5">Liste des participants inscrits :</h2>
        <div class="table-responsive" style="max-height: 300px; overflow-y: scroll;">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in sortie.participants %}
                    <tr>
                        <td>{{ participant.pseudo }}</td>
                        <td>{{ participant.nom }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="{{ path('sortie_delete', {'id': sortie.id}) }}" class="btn btn-danger">Supprimer l'événement</a>
            <a href="{{ path('sortie_update', {'id': sortie.id}) }}" class="btn btn-primary">Modifier l'événement</a>
        </div>
    </div>
{% endblock %}

