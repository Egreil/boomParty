{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>Annuler la Sortie : {{ sortie.nom }}</h2>

        <form action="{{ path('sortie_annuler', {'id': sortie.id}) }}" method="post">
            <div class="form-group">
                <label for="nom">Nom de la sortie</label>
                <input type="text" id="nom" class="form-control" value="{{ sortie.nom }}" >
            </div>
            <div class="form-group">
                <label for="date">Date de la sortie</label>
                <input type="text" id="date" class="form-control" value="{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}" >
            </div>
            <div class="form-group">
                <label for="campus">Campus</label>
                <input type="text" id="campus" class="form-control" value="{{ sortie.campus.nom }}" >
            </div>
            <div class="form-group">
                <label for="lieu">Lieu</label>
                <input type="text" id="lieu" class="form-control" value="{{ sortie.lieu.nom }}" >
            </div>
            <div class="form-group">
                <label for="motif">Motif</label>
                <textarea id="motif" name="motif" class="form-control" required></textarea>
            </div>

            <button type="submit" name="action" value="enregistrer" class="btn btn-primary mt-3 me-2">Enregistrer</button>
            <a href="{{ path('sortie_list') }}" class="btn btn-secondary mt-3">Annuler</a>
        </form>
    </div>
{% endblock %}
