{% extends 'base.html.twig' %}

{%  block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-end ">
            <div>

            </div>
            <div class="bg-light border">
                <div><span>Date du jour : {{ "now"|date("d/m/Y") }}</span></div> <!-- Affiche la date du jour -->
                <div><span>Participant : {{ app.user.nom  }}</span></div> <!-- Affiche le nom de l'utilisateur connecté -->
            </div>
        </div>
        <div class="table-responsive table-wrapper">
            {{ app.user.nom }}
            <table class=" table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">Inscrits/Place</th>
                    <th scope="col">Etats</th>
                    <th scope="col">Inscrits</th>
                    <th scope="col">Organistaur</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut | date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.dateLimiteInscription | date('d/m/Y') }}</td>
                        <td>{{ sortie.participants | length }} /{{ sortie.nbInscriptionMax }}</td>
                        <td>{{ sortie.etat.libelle }}</td>
                        <td>
                            {% set userParticipates = false %}
                            {% for participant in sortie.participants %}
                                {% if participant.id == app.user.id %}
                                    {% set userParticipates = true %}
                                    <span class="badge bg-primary">Inscrit</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ sortie.organisateur.nom }}</td>
                        <td>
                            {% if sortie.organisateur.id == app.user.id %}
                                <a href="{{ path('sortie_update', {'id': sortie.id}) }}" class="btn btn-sm btn-primary me-1">Modifier</a>
                                <a href="#" class="btn btn-sm btn-secondary">Publier</a>
                            {% endif %}

                        {% if userParticipates  %}
                            <a href="{{ path('sortie_deinscrire', {'id': sortie.id}) }}">Afficher</a>

                        {% endif %}

                        {% if userParticipates == false  %}
                            <a href="{{ path('sortie_inscrire', {'id': sortie.id}) }}">S'inscrire</a>

                        {% endif %}


                    </td>

                </tr>
                            {% if userParticipates %}
                                <a href="{{ path('sortie_details', {'id': sortie.id}) }}" class="btn btn-sm btn-primary me-1">Afficher</a>
                                <a href="#" class="btn btn-sm btn-danger">Se désister</a>
                            {% else %}
                                <a href="{{ path('sortie_details', {'id': sortie.id}) }}" class="btn btn-sm btn-primary me-1">Afficher</a>
                                <a href="#" class="btn btn-sm btn-success">S'inscrire</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary mt-3 me-2" href="{{ path('sortie_create') }}">Ajouter une sortie</a>
    </div>

{% endblock %}
