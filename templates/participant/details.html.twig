{% extends 'base.html.twig' %}

{% block title %}Participant Details{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-3xl font-bold mb-4">Participant Details</h1>

            <div class="grid grid-cols-2 gap-x-4 mb-4">
                <div class="col-span-2 md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700">Nom:</label>
                    <div class="mt-1 text-gray-900">{{ participant.nom }}</div>
                </div>

                <div class="col-span-2 md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700">Prénom:</label>
                    <div class="mt-1 text-gray-900">{{ participant.prenom }}</div>
                </div>

                    <div class="col-span-2 md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700">Email:</label>
                    <div class="mt-1 text-gray-900">{{ participant.email }}</div>
                </div>

                <div class="col-span-2 md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700">Téléphone:</label>
                    <div class="mt-1 text-gray-900">{{ participant.telephone ?: 'N/A' }}</div>
                </div>

                <div class="col-span-2 md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700">Pseudo:</label>
                    <div class="mt-1 text-gray-900">{{ participant.pseudo }}</div>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Date de Création:</label>
                    <div class="mt-1 text-gray-900">{{ participant.dateCreation ? participant.dateCreation|date('Y-m-d H:i:s') : 'N/A' }}</div>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Date de Modification:</label>
                    <div class="mt-1 text-gray-900">{{ participant.dateModification ? participant.dateModification|date('Y-m-d H:i:s') : 'N/A' }}</div>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Campus:</label>
                    <div class="mt-1 text-gray-900">{{ participant.campus.nom }}</div>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Actif:</label>
                    <div class="mt-1 text-gray-900">{{ participant.actif ? 'Oui' : 'Non' }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
